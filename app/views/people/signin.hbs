<form action="/users/session" method="post" class="signin form-horizontal">
  <div class="form-group">
    <label for="email" class="control-label col-sm-2">Email</label>
    <div class="col-sm-10">
      <input id="email" type="text" name="email" placeholder="Email" class="form-control"/>
    </div>
  </div>
  <div class="form-group">
    <label for="password" class="control-label col-sm-2">Password</label>
    <div class="controls">
      <input id="password" type="password" name="password" placeholder="Password" class="form-control col-sm-10"/>
    </div>
  </div>
  <div class="form-actions sm-offset-2">
    <button type="submit" class="btn btn-primary">Sign in</button>&nbsp;
    or&nbsp;<a href="/signup" class="show-signup">Sign up</a>
  </div>
</form>